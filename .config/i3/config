# Window color settings
# class                 border  backgr. text    indicator
client.focused          #4c566a #81a1c1 #d8dee9 #81a1c1
client.unfocused        #4c566a #8FBCBB #2e3440 #81a1c1
client.focused_inactive #4c566a #81a1c1 #2e3440 #81a1c1
client.placeholder      #4c566a #2e3440 #4c566a #81a1c1
#client.urgent           #4c566a #BF616A #d8dee9 #81a1c1

client.background       #2e3440

exec feh --bg-fill ~/Wallpapers/My-Serious-Face.jpg
exec ~/.config/polybar/launch.sh
exec_always autotiling
exec picom -b --config ~/.config/picom/picom-inactive-window-blur.conf
