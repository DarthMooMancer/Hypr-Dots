call plug#begin()

Plug 'tpope/vim-sensible'
Plug 'sheerun/vim-polyglot'

call plug#end()

set hidden
set backspace=indent,eol,start
set shiftwidth=2
set softtabstop=2
set smartindent
set tabstop=2
set nowrap
set mouse=""
set termguicolors
set scrolloff=8
set noswapfile
set nobackup
set nohlsearch
set incsearch
set nocompatible
let g:mapleader=" "

colorscheme rosepine
